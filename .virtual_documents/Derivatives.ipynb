x_list = np.linspace(-10, 10, 201)
analytical_d_list = np.cos(x_list)*x_list + np.sin(x_list)*1 - 0.03*x_list**2

h = 0.1
forward_d_list = (f(x_list+h) - f(x_list))/h
backward_d_list = (f(x_list) - f(x_list-h))/h
